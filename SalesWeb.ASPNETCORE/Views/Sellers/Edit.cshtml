@model SalesWeb.ASPNETCORE.Models.ViewModel.SellersFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Sellers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Sellers.id" />
            <div class="form-group">
                <label asp-for="Sellers.name" class="control-label"></label>
                <input asp-for="Sellers.name" class="form-control" />
                <span asp-validation-for="Sellers.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sellers.email" class="control-label"></label>
                <input asp-for="Sellers.email" class="form-control" />
                <span asp-validation-for="Sellers.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sellers.bithDate" class="control-label"></label>
                <input asp-for="Sellers.bithDate" class="form-control" />
                <span asp-validation-for="Sellers.bithDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sellers.baseSalary" class="control-label"></label>
                <input asp-for="Sellers.baseSalary" class="form-control" />
                <span asp-validation-for="Sellers.baseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sellers.DepartamentsId" class="control-label"></label>
                <select asp-for="Sellers.DepartamentsId"
                        asp-items="@(new SelectList(Model.Departaments,"Id","name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="salve" class="btn btn-dark" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }